<% layout('layouts/boilerplate') %>




<div style ="text-align: center; text-transform: capitalize;" class="mt-5 mb-2">
  <p>
    <%= experience.name %>, <%= experience.description %>
  </p>
</div>
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="<%= experience.image %>" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="<%= experience.image %>" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="<%= experience.image %>" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<div class="buttonSection" style="display: flex; flex-direction: column; justify-content: center; align-items: center; margin-top: 3%; margin-bottom: 3%;">
   <p><a href="/experiences/<%=experience._id%>/edit" class="btn btn-light">EDIT</a></p>
  
  <form action="/experiences/<%=experience._id%>?_method=DELETE" method="POST">
    <button class="btn btn-danger">DELETE</button>
  </form>

 

 

  <form action="" method="POST" id="selectedDestination">
    <select class="form-select" aria-label="Default select example" name="destinationOptions" id="destinationOptions">
      <option selected>Add To Destination</option>
      <% for (let destination of destinations) { %>
      <option value="<%= destination._id %>"> <%= destination.title %> </option>
     <% } %>
    </select>
    <button class="btn btn-outline-success">Submit</button>

<script type="text/javascript">
  document.getElementById('destinationOptions').onchange = function(){
    console.log(this.value)
      document.getElementById('selectedDestination').action = `/destinations/${this.value}/experiences/<%= experience._id %>`;
  }
</script>
  </form>
    




</div>
